{
    "collectionUrl": "http://127.0.0.1:1234/apis/zcloud.cn/v1/clusters/sc-test-cluster1/namespaces/sc-test-namespace1/statefulsets",
    "resourceUrl": "http://127.0.0.1:1234/apis/zcloud.cn/v1/clusters/sc-test-cluster1/namespaces/sc-test-namespace1/statefulsets/sc-test-statefulset1",

    "params": {
        "name": "sc-test-statefulset1",
        "replicas": 2,
        "containers":      [
            {
                "name": "sc-test-containter1",
                "image": "redis",
                "command": ["ls"],
                "args": ["-l", "/"],
                "env": [
                    {
                        "name": "TESTENV1",
                        "value": "testenv1"
                    }
                ],
                "exposedPorts": [
                    {
                        "name": "sc-test-sts-port1",
                        "port": 22223,
                        "protocol": "TCP"
                    }
                ],

                "volumes": [
                    {
                        "type": "configmap",
                        "name": "sc-test-configmap1",
                        "mountPath": "/etc/scconfig"
                    }, 
                    {
                        "type": "secret",
                        "name": "sc-test-secret1",
                        "mountPath": "/etc/scsecret"
                    },
                    {
                        "type": "persistentVolume",
                        "name": "sc-test-emptydir1",
                        "mountPath": "/etc/scststestpvc21"
                    },
                    {
                        "type": "persistentVolume",
                        "name": "sc-test-lvm-pvc2",
                        "mountPath": "/etc/scststestpvc22"
                    }
                ]
            }
        ],
        "advancedOptions": {
            "exposedServiceType": "clusterip",
            "exposedServices": [
                {
                    "containerPortName": "sc-test-sts-port1",
                    "servicePort": 22223,
                    "autoCreateIngress": true,
                    "ingressProtocol": "TCP",
                    "ingressPort": 33334
                }
            ]
        },

        "persistentClaimVolumes": [
            {
                "name": "sc-test-emptydir1",
                "size": "100Mi",
                "storageClassName": "temporary"
            },
            {
                "name": "sc-test-lvm-pvc2",
                "size": "200Mi",
                "storageClassName": "lvm"
            }
        ]
    }
}
