{
    "resourceType":"storagecluster",
    "collectionName":"storageclusters",
    "parentResources": [ "cluster" ],

    "resourceFields":{
        "storageType":{"type":"enum", "validValues": ["lvm", "cephfs"]},
        "hosts":{"type":"array","elemType":"string"},
        "phase":{"type":"string"},
        "size":{"type":"string"},
        "usedSize":{"type":"string"},
        "freeSize":{"type":"string"},
        "nodes":{"type":"array","elemType":"storagenode"},
        "pvs":{"type":"array","elemType":"storagepv"}
    },
    "subResources":{
        "storagenode":{
            "name":{"type":"string"},
            "size":{"type":"string"},
            "usedSize":{"type":"string"},
            "freeSize":{"type":"string"},
            "stat":{"type":"bool"}
        },
        "storagepv":{
            "name":{"type":"string"},
            "size":{"type":"string"},
            "usedSize":{"type":"string"},
            "freeSize":{"type":"string"},
            "pods":{"type":"array","elemType":"storagepod"},
            "node":{"type":"string"}
        },
        "storagepod":{
            "name":{"type":"string"}
        },
        "storagedev":{
            "name":{"type":"string"},
            "size":{"type":"string"}
        }
    },
    "resourceMethods":["GET","PUT","DELETE"],
    "collectionMethods":["POST","GET"],
    "postParameters":{
        "fields":{
            "storagetype":{"type":"enum", "validValues": ["lvm", "cephfs"], "required": true},
            "hosts":{"type":"array","elemType":"string", "required": true}
        }
    },
    "putParameters":{
        "fields":{
            "hosts":{"type":"array","elemType":"string", "required": true}
        }
    }
}
