{
    "resourceType": "pod",
    "collectionName": "pods",
    "parentResources": [ "deployment", "daemonset", "statefulset" ],

    "resourceFields": {
        "name": {"type": "string"},
        "nodeName": {"type": "string"},
        "containers": {"type": "array", "elemType": "container"},
        "status": {"type": "podStatus"}
    },

    "subResources": {
        "container": {
            "name": {"type": "string"},
            "image": {"type": "string"},
            "command": {"type": "array", "elemType": "string"},
            "args": {"type": "array", "elemType": "string"},
            "configName": {"type": "string"},
            "mountPath":{"type": "string"},
            "exposedPorts":{"type": "array", "elemType": "deploymentPort"},
            "env": {"type": "array", "elemType": "envVar"}
        },

        "deploymentPort": {
            "name" : {"type": "string"},
            "port" : {"type": "int"},
            "protocol": {"type": "enum", "validValues": ["tcp", "udp"]}
        },

        "envVar": {
            "name": {"type": "string"},
            "value": {"type": "string"}
        },

        "podStatus": {
            "phase": {"type": "enum", "validValues": ["Pending", "Running", "Succeeded", "Failed", "Unknown"]},
            "startTime": {"type": "date"},
            "hostIP": {"type": "string"},
            "podIP": {"type": "string"},
            "podConditions": {"type": "array", "elemType": "podCondition"},
            "containerStatuses": {"type": "array", "elemType": "containerStatus"}
        },

        "podCondition": {
            "type" : {"type": "enum", "validValues": ["PodScheduled", "Ready", "Initialized", "ContainersReady"]},
            "status": {"type": "enum", "validValues": ["True", "False", "Unknown"]},
            "lastProbeTime" : {"type": "date"},
            "lastTransitionTime" : {"type": "date"}
        },

        "containerStatus": {
            "name": {"type": "string"},
            "ready": {"type": "bool"},
            "restartCount": {"type": "int32"},
            "image": {"type": "string"},
            "imageID": {"type": "string"},
            "containerID": {"type": "string"},
            "lastState": {"type": "containerState"},
            "state": {"type": "containerState"}
        },

        "containerState": {
            "type": {"type": "enum", "validValues": ["waiting", "running", "terminated"]},
            "containerID": {"type": "string"},
            "exitCode": {"type": "int32"},
            "reason": {"type": "string"},
            "message": {"type": "string"},
            "finishedAt": {"type": "date"},
            "startedAt": {"type": "date"}
        }
    },

    "resourceMethods": [ "GET"],
    "collectionMethods": [ "GET" ]
}
