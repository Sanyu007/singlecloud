{
    "resourceType": "deployment",
    "collectionName": "deployments",
    "parentResources": [ "namespace" ],

    "resourceFields": {
        "name": {"type": "string"},
        "replicas": {"type": "int"},
        "containers": {"type": "array", "elemType": "container"},
        "advancedOptions": {"type": "advancedOptions"},
        "persistentClaimVolumes": {"type": "array", "elemType": "persistentClaimVolume"}
    },

    "subResources": {
        "container": {
            "name": {"type": "string"},
            "image": {"type": "string"},
            "command": {"type": "array", "elemType": "string"},
            "args": {"type": "array", "elemType": "string"},
            "exposedPorts":{"type": "array", "elemType": "containerPort"},
            "env": {"type": "array", "elemType": "envVar"},
            "volumes": {"type": "array", "elemType": "volume"}
        },

        "volume": {
            "type": {"type": "enum", "validValues": ["configmap", "secret", "persistentVolume"]},
            "name": {"type": "string"},
            "mountPath": {"type": "string"}
        },

        "envVar": {
            "name": {"type": "string"},
            "value": {"type": "string"}
        },

        "containerPort": {
            "name" : {"type": "string"},
            "port" : {"type": "int"},
            "protocol": {"type": "enum", "validValues": ["tcp", "udp"]}
        },

        "advancedOptions": {
            "relaodWhenConfigChange": {"type": "bool"},
            "exposedServiceType": {"type": "enum", "validValues": ["clusterip", "nodeport"]},
            "exposedServices": {"type": "array", "elemType": "exposedService"},
            "exposedMetric": {"type": "exposedMetric"}
        },

        "exposedService": {
            "containerPortName" : {"type": "string"},
            "servicePort" : {"type": "int"},
            "autoCreateIngress" : {"type": "bool"},
            "ingressHost" : {"type": "string"},
            "ingressPath" : {"type": "string"},
            "ingressProtocol": {"type": "enum", "validValues": ["TCP", "UDP", "HTTP", "GRPC"]},
            "ingressPort" : {"type": "int"}
        },

        "exposedMetric": {
            "path" : {"type": "string"},
            "port" : {"type": "int"}
        },

        "persistentClaimVolume": {
            "name": {"type": "string"},
            "size": {"type": "string"},
            "storageClassName": {"type": "enum", "validValues": ["lvm", "nfs", "temporary", "cephfs"]}
        }
    },

    "resourceMethods": [ "GET", "PUT", "DELETE" ],
    "collectionMethods": [ "POST", "GET" ],

    "postParameters": {
        "fields": {
            "name": {"type": "string", "required": true},
            "replicas": {"type": "int", "required": true},
            "containers":  {"type": "array", "elemType": "container", "required": true},
            "advancedOptions": {"type": "advancedOptions"},
            "persistentClaimVolumes": {"type": "array", "elemType": "persistentClaimVolume"}
        },

        "subResources": {
            "container": {
                "name": {"type": "string", "required": true},
                "image": {"type": "string", "required": true},
                "command": {"type": "array", "elemType": "string"},
                "args": {"type": "array", "elemType": "string"},
                "exposedPorts":{"type": "array", "elemType": "containerPort"},
                "env": {"type": "array", "elemType": "envVar"},
                "volumes": {"type": "array", "elemType": "volume"}
            },

            "volume": {
                "type": {"type": "enum", "validValues": ["configmap", "secret", "persistentVolume"]},
                "name": {"type": "string"},
                "mountPath": {"type": "string"}
            },

            "envVar": {
                "name": {"type": "string"},
                "value": {"type": "string"}
            },

            "containerPort": {
                "name" : {"type": "string"},
                "port" : {"type": "int", "required": true},
                "protocol": {"type": "enum", "validValues": ["TCP", "UDP"], "required": true}
            },

            "advancedOptions": {
                "relaodWhenConfigChange": {"type": "bool"},
                "exposedServiceType": {"type": "enum", "validValues": ["clusterip", "nodeport"]},
                "exposedServices": {"type": "array", "elemType": "exposedService"},
                "exposedMetric": {"type": "exposedMetric"}
            },

            "exposedService": {
                "containerPortName" : {"type": "string"},
                "servicePort" : {"type": "int"},
                "autoCreateIngress" : {"type": "bool"},
                "ingressHost" : {"type": "string"},
                "ingressPath" : {"type": "string"},
                "ingressProtocol": {"type": "enum", "validValues": ["TCP", "UDP", "HTTP", "GRPC"]},
                "ingressPort" : {"type": "int"}
            },

            "exposedMetric": {
                "path" : {"type": "string"},
                "port" : {"type": "int"}
            },

            "persistentClaimVolume": {
                "name": {"type": "string"},
                "size": {"type": "string"},
                "storageClassName": {"type": "enum", "validValues": ["lvm", "nfs", "temporary", "cephfs"]}
            }
        }
    },

    "resourceActions":[ 
        {
            "name": "history",
            "output": {
                "history": {"type": "array", "elemType": "versionInfo"}
            },
            "subResource": {
                "versionInfo": {
                    "name": {"type": "string"},
                    "namespace": {"type": "string"},
                    "version": {"type": "int"},
                    "changeReason": {"type": "string"},
                    "containers": {"type": "array", "elemType": "container"}
                },
                "container": {
                    "name": {"type": "string"},
                    "image": {"type": "string"},
                    "command": {"type": "array", "elemType": "string"},
                    "args": {"type": "array", "elemType": "string"},
                    "configName": {"type": "string"},
                    "mountPath":{"type": "string"},
                    "exposedPorts":{"type": "array", "elemType": "deploymentPort"},
                    "env": {"type": "array", "elemType": "envVar"},
                    "secretName": {"type": "string"},
                    "secretPath": {"type": "string"}
                },

                "envVar": {
                    "name": {"type": "string"},
                    "value": {"type": "string"}
                },

                "deploymentPort": {
                    "name" : {"type": "string"},
                    "port" : {"type": "int"},
                    "protocol": {"type": "enum", "validValues": ["tcp", "udp"]}
                }
            }
        },

        {
            "name": "setImage",
            "input": {
                "reason": {"type": "string"},
                "images": {"type": "array", "elemType": "containerImage"}
            },
            "subResources": {
                "containerImage": {
                    "name": {"type": "string"},
                    "image": {"type": "string"}
                }
            }
        },

        {
            "name": "rollback",
            "input": {
                "reason": {"type": "string"},
                "version": {"type": "int"}
            }
        }
    ]
}
