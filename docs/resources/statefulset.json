{
    "resourceType": "statefulset",
    "collectionName": "statefulsets",
    "parentResources": [ "namespace" ],

    "resourceFields": {
        "name": {"type": "string"},
        "replicas": {"type": "int"},
        "containers": {"type": "array", "elemType": "container"},
        "advancedOptions": {"type": "advancedOptions"},
        "persistentVolumes": {"type": "array", "elemType": "persistentVolume"},
        "status": {"type": "statefulsetStatus"}
    },

    "subResources": {
        "container": {
            "name": {"type": "string"},
            "image": {"type": "string"},
            "command": {"type": "array", "elemType": "string"},
            "args": {"type": "array", "elemType": "string"},
            "exposedPorts":{"type": "array", "elemType": "deploymentPort"},
            "env": {"type": "array", "elemType": "envVar"},
            "volumes": {"type": "array", "elemType": "volume"}
        },

        "volume": {
            "type": {"type": "enum", "validValues": ["configmap", "secret", "persistentVolume"]},
            "name": {"type": "string"},
            "mountPath": {"type": "string"}
        },

        "envVar": {
            "name": {"type": "string"},
            "value": {"type": "string"}
        },

        "deploymentPort": {
            "name" : {"type": "string"},
            "port" : {"type": "int"},
            "protocol": {"type": "enum", "validValues": ["tcp", "udp"]}
        },

        "advancedOptions": {
            "deletePVsWhenDeleteWorkload": {"type": "bool"},
            "reloadWhenConfigChange": {"type": "bool"},
            "exposedMetric": {"type": "exposedMetric"}
        },

        "exposedMetric": {
            "path" : {"type": "string"},
            "port" : {"type": "int"}
        },

        "persistentVolume": {
            "name": {"type": "string"},
            "size": {"type": "string"},
            "storageClassName": {"type": "enum", "validValues": ["lvm", "nfs", "temporary", "cephfs"]}
        },

        "statefulsetStatus": {
              "observedGeneration": {"type": "int"},
              "replicas": {"type": "int"},
              "readyReplicas": {"type": "int"},
              "updatedReplicas": {"type": "int"},
              "currentReplicas": {"type": "int"},
              "currentRevision": {"type": "string"},
              "updateRevision": {"type": "string"},
              "collisionCount": {"type": "int"},
              "conditions": {"type": "array": "elemType": "statefulsetCondition"}
        },
         
        "statefulsetCondition": {
            "type": {"type": "string"},
            "status": {"type": "enum", "validValues": ["True", "False", "Unknown"]},
            "lastTransitionTime": {"type": "date"},
            "reason": {"type": "string"},
            "message": {"type": "string"}
        }
    },

    "resourceMethods": [ "GET", "PUT", "DELETE" ],
    "collectionMethods": [ "POST", "GET" ],

    "postParameters": {
        "fields": {
            "name": {"type": "string", "required": true},
            "replicas": {"type": "int", "required": true},
            "containers":  {"type": "array", "elemType": "container", "required": true},
            "advancedOptions": {"type": "advancedOptions"},
            "persistentVolumes": {"type": "array", "elemType": "persistentVolume"}
        },

        "subResources": {
            "container": {
                "name": {"type": "string", "required": true},
                "image": {"type": "string", "required": true},
                "command": {"type": "array", "elemType": "string"},
                "args": {"type": "array", "elemType": "string"},
                "exposedPorts":{"type": "array", "elemType": "deploymentPort"},
                "env": {"type": "array", "elemType": "envVar"},
                "volumes": {"type": "array", "elemType": "volume"}
            },

            "volume": {
                "type": {"type": "enum", "validValues": ["configmap", "secret", "persistentVolume"]},
                "name": {"type": "string"},
                "mountPath": {"type": "string"}
            },

            "envVar": {
                "name": {"type": "string"},
                "value": {"type": "string"}
            },

            "deploymentPort": {
                "name" : {"type": "string"},
                "port" : {"type": "int", "required": true},
                "protocol": {"type": "enum", "validValues": ["tcp", "udp"], "required": true}
            },

            "advancedOptions": {
                "deletePVsWhenDeleteWorkload": {"type": "bool"},
                "reloadWhenConfigChange": {"type": "bool"},
                "exposedMetric": {"type": "exposedMetric"}
            },

            "exposedMetric": {
                "path" : {"type": "string"},
                "port" : {"type": "int"}
            },

            "persistentVolume": {
                "name": {"type": "string"},
                "size": {"type": "string"},
                "storageClassName": {"type": "enum", "validValues": ["lvm", "nfs", "temporary", "cephfs"]}
            }
        }
    },

    "resourceActions":[ 
        {
            "name": "history",
            "output": {
                "history": {"type": "array", "elemType": "versionInfo"}
            },
            "subResource": {
                "versionInfo": {
                    "name": {"type": "string"},
                    "namespace": {"type": "string"},
                    "version": {"type": "int"},
                    "changeReason": {"type": "string"},
                    "containers": {"type": "array", "elemType": "container"}
                },
                "container": {
                    "name": {"type": "string"},
                    "image": {"type": "string"},
                    "command": {"type": "array", "elemType": "string"},
                    "args": {"type": "array", "elemType": "string"},
                    "configName": {"type": "string"},
                    "mountPath":{"type": "string"},
                    "exposedPorts":{"type": "array", "elemType": "deploymentPort"},
                    "env": {"type": "array", "elemType": "envVar"},
                    "secretName": {"type": "string"},
                    "secretPath": {"type": "string"}
                },

                "envVar": {
                    "name": {"type": "string"},
                    "value": {"type": "string"}
                },

                "deploymentPort": {
                    "name" : {"type": "string"},
                    "port" : {"type": "int"},
                    "protocol": {"type": "enum", "validValues": ["tcp", "udp"]}
                }
            }
        },

        {
            "name": "setImage",
            "input": {
                "reason": {"type": "string"},
                "images": {"type": "array", "elemType": "containerImage"}
            },
            "subResources": {
                "containerImage": {
                    "name": {"type": "string"},
                    "image": {"type": "string"}
                }
            }
        },

        {
            "name": "rollback",
            "input": {
                "reason": {"type": "string"},
                "version": {"type": "int"}
            }
        }
    ]
}
